{
	"name": "melonjs-monorepo",
	"version": "0.0.0",
	"type": "module",
	"engines": {
		"node": ">= 20"
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "eslint && biome check",
		"test": "vitest",
		"test:types": "turbo test:types",
		"doc": "pnpm -F melonjs doc",
		"publish-melonjs": "pnpm lint && pnpm biome check && pnpm publish --filter melonjs",
		"publish-debug-plugin": "pnpm lint && pnpm biome check && pnpm publish --filter debug-plugin"
	},
	"packageManager": "pnpm@9.5.0",
	"dependencies": {
		"turbo": "^2.0.6",
		"@biomejs/biome": "1.8.3",
		"@eslint/js": "^9.6.0",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20.14.10",
		"@vitest/browser": "^2.0.2",
		"eslint": "^9.6.0",
		"eslint-plugin-jsdoc": "^48.5.2",
		"globals": "^15.8.0",
		"lefthook": "^1.7.1",
		"tsconfig": "workspace:latest",
		"typescript": "^5.5.3",
		"typescript-eslint": "^8.0.0-alpha.41",
		"vitest": "^2.0.2"
	}
}
