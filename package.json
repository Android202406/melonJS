{
	"name": "melonjs",
	"version": "18.0.0",
	"description": "melonJS Game Engine",
	"homepage": "http://www.melonjs.org/",
	"type": "module",
	"keywords": [
		"2D",
		"HTML5",
		"javascript",
		"TypeScript",
		"es6",
		"Canvas",
		"WebGL",
		"WebGL2",
		"WebAudio",
		"game",
		"engine",
		"tiled",
		"tileset",
		"mapeditor",
		"browser",
		"electron",
		"mobile",
		"cordova"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/melonjs/melonJS.git"
	},
	"bugs": {
		"url": "https://github.com/melonjs/melonJS/issues"
	},
	"license": "MIT",
	"author": "Olivier Biot (AltByte Pte Ltd)",
	"funding": "https://github.com/sponsors/melonjs",
	"engines": {
		"node": ">= 20"
	},
	"types": "./build/index.d.ts",
	"exports": {
		".": "./build/index.js"
	},
	"files": ["build", "package.json", "README.md", "LICENSE", "CHANGELOG"],
	"dependencies": {
		"@teppeis/multimaps": "^3.0.0",
		"core-js": "^3.37.1",
		"howler": "2.2.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.2",
		"@eslint/js": "^9.5.0",
		"@types/eslint__js": "^8.42.3",
		"@types/howler": "^2.2.11",
		"@types/node": "^20.14.8",
		"@vitest/browser": "^1.6.0",
		"del-cli": "^5.1.0",
		"esbuild": "^0.21.5",
		"eslint": "^9.5.0",
		"eslint-plugin-jsdoc": "^48.2.12",
		"globals": "^15.6.0",
		"lefthook": "^1.6.18",
		"npm-self-link": "^1.1.7",
		"serve": "^14.2.3",
		"typedoc": "^0.26.3",
		"typedoc-plugin-missing-exports": "^3.0.0",
		"typescript": "^5.5.2",
		"typescript-eslint": "^8.0.0-alpha.33",
		"vite-plugin-glsl": "^1.3.0",
		"vitest": "^1.6.0"
	},
	"scripts": {
		"build": "node scripts/build.js && npm run types",
		"dist": " npm run clean && npm run lint && npx vitest run && npm run build && npm run doc",
		"lint": "eslint",
		"test": "vitest",
		"doc": "typedoc src/index.js --plugin typedoc-plugin-missing-exports",
		"doc:watch": "typedoc src/index.js --plugin typedoc-plugin-missing-exports --watch",
		"serve": "serve docs",
		"prepublishOnly": "npm run dist && npm run test",
		"clean": "node scripts/clean.js",
		"types": "tsc --project tsconfig.build.json"
	},
	"packageManager": "npm@10.7.0"
}
