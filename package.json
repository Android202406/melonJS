{
	"name": "melonjs",
	"version": "17.5.0",
	"description": "melonJS Game Engine",
	"homepage": "http://www.melonjs.org/",
	"type": "module",
	"keywords": [
		"2D",
		"HTML5",
		"javascript",
		"TypeScript",
		"es6",
		"Canvas",
		"WebGL",
		"WebGL2",
		"WebAudio",
		"game",
		"engine",
		"tiled",
		"tileset",
		"mapeditor",
		"browser",
		"electron",
		"mobile",
		"cordova"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/melonjs/melonJS.git"
	},
	"bugs": {
		"url": "https://github.com/melonjs/melonJS/issues"
	},
	"license": "MIT",
	"author": "Olivier Biot (AltByte Pte Ltd)",
	"funding": "https://github.com/sponsors/melonjs",
	"engines": {
		"node": ">= 20"
	},
	"main": "dist/melonjs.module.js",
	"module": "dist/melonjs.module.js",
	"types": "dist/types/index.d.ts",
	"sideEffects": false,
	"files": [
		"dist/melonjs.mjs",
		"dist/melonjs.module.js",
		"dist/types",
		"src/",
		"package.json",
		"README.md",
		"LICENSE",
		"CHANGELOG"
	],
	"dependencies": {
		"@teppeis/multimaps": "^3.0.0",
		"core-js": "^3.37.1",
		"earcut": "2.2.4",
		"eventemitter3": "^5.0.1",
		"howler": "2.2.4",
		"semver": "^7.6.2",
		"whatwg-fetch": "^3.6.20"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.2",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-image": "^3.0.3",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-replace": "^5.0.7",
		"@stylistic/eslint-plugin": "^2.2.2",
		"@types/howler": "^2.2.11",
		"@types/node": "^20.14.8",
		"@types/semver": "^7.5.8",
		"@vitest/browser": "^1.6.0",
		"cross-env": "^7.0.3",
		"del-cli": "^5.1.0",
		"eslint": "^9.5.0",
		"eslint-plugin-jsdoc": "^48.2.12",
		"globals": "^15.6.0",
		"npm-self-link": "^1.1.7",
		"rollup": "^4.18.0",
		"rollup-plugin-bundle-size": "^1.0.3",
		"rollup-plugin-string": "^3.0.0",
		"typedoc": "^0.26.1",
		"typescript": "^5.5.2",
		"vite-plugin-glsl": "^1.3.0",
		"vitest": "^1.6.0"
	},
	"scripts": {
		"build": "npm run lint && rollup -c --silent",
		"build:cd": "npm run lint && rollup -c --failAfterWarnings",
		"dist": " npm run clean && npm run build && mkdir dist && node scripts/dist.js && npm run types && npx vitest run && npm run doc",
		"lint": "eslint",
		"test": "vitest",
		"doc": "typedoc src/index.js",
		"serve": "python3 -m http.server",
		"prepublishOnly": "npm run dist && npm run test",
		"clean": "del-cli --force build/*.* dist/** dist",
		"types": "tsc --project tsconfig.build.json"
	},
	"packageManager": "npm@10.7.0"
}
